T}
T{
0x80000004
T}	T{
barconfig_update
T}	T{
Sent whenever a bar config changes
T}
T{
0x80000005
T}	T{
binding
T}	T{
Sent when a configured binding is executed
T}
T{
0x80000006
T}	T{
shutdown
T}	T{
Sent when the ipc shuts down because sway is exiting
T}
T{
0x80000007
T}	T{
